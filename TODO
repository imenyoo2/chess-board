const unhighlight = highlightedSpots.reduce((ac: any, item: any) => {
  ac[item] = {...State[item], highlighted: false}
  return ac
}
const highlight = highlightSpots.reduce((ac: any, item: any) => {
  ac[item] = {...State[item], highlighted: !State[id].highlighted}
  return ac
})


